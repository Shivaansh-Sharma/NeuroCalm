                    d="M 0 10 C 10 10,10 10 ,0 10 C 10 10 , 10 10 , 10 20 C 10 10 , 10 10 , 20 10 C 10 10 , 10 10 , 10 0 C 10 10,10 10 ,0 10 Z"
                  ></path>
                </svg>
              </div>
            </div>
          </label>
    </header>
    
    <main class="centered">
        <section class="details-container" id="detailsContainer">
            <h1>Profile Details</h1>
            <h1>Welcome, <%= user.firstname %>!</h1>

            <br>
            <form id="userForm" action="/user/update" method="POST">
                <label>First Name:</label>
                <input type="text" id="firstName" name="firstName" value="<%= user.firstname %>" disabled>
                
                <label>Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="<%= user.lastname %>" disabled>
                
                <label>Email:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" disabled>
                
                <label>Date of Birth:</label>
                <input type="date" id="dob" name="dob" value="<%= dob %>" disabled>
                
                <label>Region:</label>
                <input type="text" id="region" name="region" value="<%= user.region %>" disabled>
                
                
                <div class="button-wrapper">
                  <button class="button-container" type="button" id="editButton">Edit</button>
                  <button class="button-container" type="button" id="returnButton">Return</button>
                </div>
            
            </form>
        </section>
    </main>
    
    <footer>
        <p>Â© 2025 NeuroCalm. All rights reserved.</p>
    </footer>
    
    <script>
        document.getElementById('returnButton').addEventListener('click', function() {
            window.location.href = '/dashboard'; // Assuming this redirects back to the user dashboard
        });

        const editButton = document.getElementById('editButton');
        const formInputs = document.querySelectorAll('#userForm input, #userForm textarea');
        const detailsContainer = document.getElementById('detailsContainer');
        let generatedOtp = '';
        let isOtpVerified = false;

        editButton.addEventListener('click', function() {
    if (editButton.innerText === 'Edit') {
        formInputs.forEach(input => input.disabled = false);
        editButton.innerText = 'Save Changes';
    } else {
        formInputs.forEach(input => input.disabled = true);
        editButton.innerText = 'Edit';
        alert('Changes saved successfully!');
        // Optional: Add form submission logic here
    }
});

const modeToggle = document.getElementById("input");

// Apply saved mode on page load
if (localStorage.getItem("theme") === "dark") {
    document.body.classList.add("dark-mode");
    modeToggle.checked = true; // keep switch in sync
}

// Toggle and save mode
modeToggle.addEventListener("change", () => {
    if (modeToggle.checked) {
        document.body.classList.add("dark-mode");
        localStorage.setItem("theme", "dark");
    } else {
        document.body.classList.remove("dark-mode");
        localStorage.setItem("theme", "light");
    }
});

    </script>
</body>
</html>
